{
  "$id": "https://unomi.apache.org/schemas/json/profile/1-0-0",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Profile",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://unomi.apache.org/schemas/json/item/1-0-0"
    }
  ],
  "properties": {
    "properties" : {
      "type" : "object",
      "unomiPropertyTypes" : [ "profiles" ],
      "maxProperties": 50
    },
    "systemProperties" : {
      "type" : "object",
      "maxProperties": 50
    },
    "segments" : {
      "type" : "array",
      "items" : {
        "type" : "string"
      }
    },
    "scores" : {
      "type" : "object",
      "additionalProperties": { "type": "integer" },
      "maxProperties": 100
    },
    "mergedWith" : {
      "type" : "string"
    },
    "consents" : {
      "type" : "object",
      "additionalProperties": { "$ref" : "https://unomi.apache.org/schemas/json/consent.json" },
      "maxProperties": 50
    }
  }
}