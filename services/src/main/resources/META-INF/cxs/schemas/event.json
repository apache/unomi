{
  "$id": "https://unomi.apache.org/schemas/json/event.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Event",
  "type": "object",
  "allOf": [{ "$ref": "https://unomi.apache.org/schemas/json/timestampeditem.json" }],
  "properties" : {
    "eventType" : {
      "type" : "string",
      "pattern" : "^(\\w|[-_@\\.]){0,50}$"
    },
    "profileId" : {
      "type" : [ "null", "string"],
      "pattern" : "^(\\w|[-_@\\.]){0,50}$"
    },
    "sessionId" : {
      "type" : [ "null", "string"],
      "pattern" : "^(\\w|[-_@\\.]){0,50}$"
    },
    "scope" : {
      "type" : [ "null", "string"],
      "pattern" : "^(\\w|[-_@\\.]){0,50}$"
    },
    "sourceId" : {
      "type" : [ "null", "string"],
      "pattern" : "^(\\w|[-_@\\.]){0,50}$"
    }
  }
}