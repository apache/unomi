{
    "metadata": {
        "id": "profilePropertyCondition",
        "name": "profilePropertyCondition",
        "description": "Evaluates a profile property against various comparison criteria",
        "systemTags": [
            "availableToEndUser",
            "profileTags",
            "demographic",
            "condition",
            "profileCondition"
        ],
        "readOnly": true
    },
    "conditionEvaluator": "propertyConditionEvaluator",
    "queryBuilder": "propertyConditionESQueryBuilder",
    "parameters": [
        {
            "id": "propertyName",
            "type": "string",
            "multivalued": false,
            "validation": {
                "required": true
            }
        },
        {
            "id": "comparisonOperator",
            "type": "string",
            "multivalued": false,
            "validation": {
                "required": true,
                "allowedValues": [
                    "equals",
                    "notEquals",
                    "lessThan",
                    "greaterThan",
                    "lessThanOrEqualTo",
                    "greaterThanOrEqualTo",
                    "between",
                    "exists",
                    "missing",
                    "contains",
                    "notContains",
                    "startsWith",
                    "endsWith",
                    "matchesRegex"
                ]
            }
        },
        {
            "id": "propertyValue",
            "type": "string",
            "multivalued": false,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValue"
            }
        },
        {
            "id": "propertyValueInteger",
            "type": "integer",
            "multivalued": false,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValue"
            }
        },
        {
            "id": "propertyValueDate",
            "type": "date",
            "multivalued": false,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValue"
            }
        },
        {
            "id": "propertyValueDateExpr",
            "type": "string",
            "multivalued": false,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValue"
            }
        },
        {
            "id": "propertyValues",
            "type": "string",
            "multivalued": true,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValues"
            }
        },
        {
            "id": "propertyValuesInteger",
            "type": "integer",
            "multivalued": true,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValues"
            }
        },
        {
            "id": "propertyValuesDate",
            "type": "date",
            "multivalued": true,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValues"
            }
        },
        {
            "id": "propertyValuesDateExpr",
            "type": "string",
            "multivalued": true,
            "validation": {
                "recommended": true,
                "exclusive": true,
                "exclusiveGroup": "propertyValues"
            }
        }
    ]
}
